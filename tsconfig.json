{
    "compilerOptions": {
      "jsx": "react",
      "target": "ES2023",                         // Use a modern ECMAScript version (ES2020+ for async functions, etc.)
      "lib": ["DOM", "ES2023"],                   // Include the DOM and ES2020 libraries
      "module": "ESNext",                         // Use ES modules
      "moduleResolution": "node",                 // Resolve modules like Node.js
      "esModuleInterop": true,                    // Enables interop between ES modules and CommonJS
      "skipLibCheck": true,                       // Skip checking .d.ts files for faster builds
      "forceConsistentCasingInFileNames": true,   // Ensure consistent casing in file imports
      "strict": true,                             // Enable all strict type-checking options
      "noImplicitAny": true,                      // Disallow implicit `any` types
      "strictNullChecks": true,                   // Enable strict null checks
      "strictFunctionTypes": true,                // Enable strict function type checking
      "sourceMap": true,                          // Generate source maps for debugging
      "outDir": "dist",                           // Output directory for compiled files
      "baseUrl": ".",                             // Set the base URL for module resolution
      "paths": {                                  // Set up path aliases (if needed)
        "@/*": ["src/*"]
      },
      "allowSyntheticDefaultImports": true,       // Allow default imports from modules with no default export
      "resolveJsonModule": true,                  // Allow importing JSON modules
      "types": ["chrome"]                 // Include types for Chrome and Node.js
    },
    "include": [
      "src/**/*"                                  // Include all TypeScript files in the `src` directory
    ],
    "exclude": [
      "node_modules",                             // Exclude the `node_modules` directory
      "dist"                                      // Exclude the output directory
    ]
  }
  